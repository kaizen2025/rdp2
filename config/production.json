  "ged": {
    "enabled": true,
    "networkPath": "\\\\192.168.1.230\\Donnees",
    "workingDirectory": "./data/ged/",
    "autoIndex": true,
    "scanInterval": 30,
    "maxSearchResults": 10,
    "embeddingModel": "local",
