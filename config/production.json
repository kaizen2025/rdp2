{
  "environment": "production",
  "version": "3.0.27",
  "buildDate": "2025-11-04T06:43:50.000Z",
  "server": {
    "port": 3001,
    "host": "localhost",
    "maxConnections": 100,
    "timeout": 30000,
    "cors": {
      "enabled": true,
      "allowedOrigins": ["localhost:3000", "localhost:3001"],
      "credentials": true
