{
  "appId": "com.anecoop.rdsviewer",
  "productName": "RDS Viewer",
  "copyright": "Copyright Â© 2025 Anecoop",
  "extraMetadata": {
    "main": "electron/main.js",
    "name": "rds-viewer",
    "version": "3.0.26"
  },
  "directories": {
    "buildResources": "assets",
    "output": "dist"
  },
  "files": [
    "build/**/*",
    "electron/**/*",
    "server/**/*",
    "backend/**/*",
    "config/**/*",
    "data/**/*",
    "node_modules/**/*",
    "package.json",
    "!build/**/*.map",
    "!node_modules/**/{test,__tests__,tests}/**",
    "!node_modules/**/.*"
  ],
  "extraResources": [
    {
      "from": "config",
      "to": "config",
      "filter": ["**/*"]
    },
    {
      "from": "data",
      "to": "data",
      "filter": ["**/*"]
    }
  ],
  "compression": "normal",
  "asar": false,
  "win": {
    "target": [
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "icon": "assets/icon.ico",
    "artifactName": "${productName}-${version}-Portable-Optimized.${ext}",
    "requestedExecutionLevel": "asInvoker",
    "verifyUpdateCodeSignature": false,
    "publisherName": "Anecoop",
    "legalTrademarks": "Anecoop",
    "fileAssociations": []
  },
  "portable": {
    "artifactName": "${productName}-${version}-Portable-Optimized.exe",
    "requestExecutionLevel": "user",
    "useZip": false,
    "unpackDirName": "RDSViewer-Portable",
    "unicode": false
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      }
    ],
    "icon": "assets/icon.png",
    "category": "Office;Utility;Network",
    "artifactName": "${productName}-${version}-Optimized.${ext}",
    "maintainer": "Anecoop <support@anecoop.com>",
    "vendor": "Anecoop"
  },
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "assets/icon.icns",
    "category": "public.app-category.productivity",
    "artifactName": "${productName}-${version}-Optimized.${ext}"
  },
  "publish": null
}
