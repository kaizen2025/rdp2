{
  "appId": "com.anecoop.rdsviewer",
  "productName": "RDS Viewer",
  "copyright": "Copyright Â© 2025 Anecoop",
  "extraMetadata": {
    "main": "electron/main.js",
    "name": "rds-viewer",
    "version": "3.0.26"
  },
  "directories": {
    "buildResources": "assets",
    "output": "dist"
  },
  "files": [
    "build/**/*",
    "electron/**/*",
    "server/**/*",
    "backend/**/*",
    "config/**/*",
    "data/**/*",
    "node_modules/**/*",
    "package.json",
    "!build/**/*.map",
    "!build/**/*.gz",
    "!build/**/*.br",
    "!node_modules/**/{CHANGELOG.md,README.md,readme.md,README,readme,HISTORY.md,CONTRIBUTING.md}",
    "!node_modules/**/{test,__tests__,tests,powered-test,example,examples,samples,docs,doc,website,images}",
    "!node_modules/**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj,ts,tsx,map}",
    "!node_modules/**/.{DS_Store,git,hg,svn,idea,vscode,editorconfig,eslintrc,prettierrc,babelrc}",
    "!node_modules/**/LICENSE",
    "!node_modules/**/license"
  ],
  "extraResources": [
    {
      "from": "config",
      "to": "config",
      "filter": ["**/*"]
    },
    {
      "from": "data",
      "to": "data",
      "filter": ["**/*"]
    }
  ],
  "compression": "maximum",
  "asar": true,
  "asarUnpack": [
    "node_modules/better-sqlite3/**/*",
    "node_modules/bcrypt/**/*",
    "backend/**/*",
    "server/**/*",
    "config/**/*"
  ],
  "win": {
    "target": [
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "icon": "assets/icon.ico",
    "artifactName": "${productName}-${version}-Portable-Optimized.${ext}",
    "requestedExecutionLevel": "asInvoker",
    "verifyUpdateCodeSignature": false,
    "publisherName": "Anecoop",
    "legalTrademarks": "Anecoop",
    "fileAssociations": []
  },
  "portable": {
    "artifactName": "${productName}-${version}-Portable-Optimized.exe",
    "requestExecutionLevel": "user",
    "useZip": true,
    "splashImage": "assets/icon.png",
    "unpackDirName": "RDSViewer-Portable"
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      }
    ],
    "icon": "assets/icon.png",
    "category": "Office;Utility;Network",
    "artifactName": "${productName}-${version}-Optimized.${ext}",
    "maintainer": "Anecoop <support@anecoop.com>",
    "vendor": "Anecoop"
  },
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "assets/icon.icns",
    "category": "public.app-category.productivity",
    "artifactName": "${productName}-${version}-Optimized.${ext}"
  },
  "publish": null
}
