  "metadata": {
    "version": "1.0",
    "lastModified": "2025-11-04T07:55:33Z",
    "description": "Configuration des seuils d'alerte pour les métriques IA - DocuCortex",
    "author": "Système de Métriques IA",
    "categories": [
      "performance",
      "reliability", 
      "system",
      "network",
      "ai-services"
    ],
    "tags": [
      "ollama",
      "easyocr", 
      "docucortex",
      "ged",
      "alerting",
      "monitoring"
    ]
  },
  "alertRules": {
    "escalation": {
      "critical": {
        "delay": 30000,
        "maxEscalations": 3,
        "notifications": ["email", "slack", "sms"]
      },
      "high": {
        "delay": 60000,
        "maxEscalations": 2,
        "notifications": ["email", "slack"]
      },
      "warning": {
        "delay": 120000,
        "maxEscalations": 1,
        "notifications": ["slack"]
      }
    },
    "recovery": {
      "autoResolve": true,
      "minDuration": 300000,
      "confirmStability": 60000
    },
    "notifications": {
      "email": {
        "enabled": true,
        "recipients": [
          "admin@docucortex.com",
          "devops@docucortex.com"
        ]
      },
      "slack": {
        "enabled": true,
        "webhook": "${SLACK_WEBHOOK_URL}",
        "channel": "#alerts"
      },
      "sms": {
        "enabled": false,
        "numbers": []
      }
    }
  },
  "monitoring": {
    "intervals": {
      "checkFrequency": 1000,
      "alertCheck": 5000,
      "statisticsUpdate": 30000
    },
    "retention": {
      "metricsHistory": 86400000,
      "alertHistory": 604800000,
      "logRetention": 2592000000
    },
    "sampling": {
      "enabled": true,
      "rate": 0.1,
      "maxSamples": 1000
    }
  },
  "thresholds": {
    "multiMetricAlerts": {
      "degradedPerformance": {
        "conditions": [
          {
            "metric": "responseTime",
            "threshold": "warning",
            "duration": 300000
          },
          {
            "metric": "successRate", 
            "threshold": "warning",
            "duration": 300000
          }
        ],
        "action": "composite_warning"
      },
      "systemOverload": {
        "conditions": [
          {
            "metric": "cpuUsage",
            "threshold": "high",
            "duration": 60000
          },
          {
            "metric": "memoryUsage",
            "threshold": "high", 
            "duration": 60000
          }
        ],
        "action": "composite_critical"
      }
    }
  },
  "customization": {
    "ui": {
      "refreshInterval": 2000,
      "chartIntervals": {
        "realtime": 5000,
        "hourly": 60000,
        "daily": 300000
      },
      "colors": {
        "critical": "#e74c3c",
        "high": "#f39c12", 
        "warning": "#f1c40f",
        "good": "#27ae60",
        "excellent": "#2ecc71"
      }
    },
    "reporting": {
      "enabled": true,
      "formats": ["json", "csv", "pdf"],
      "schedule": {
        "daily": "08:00",
        "weekly": "monday 09:00",
        "monthly": "1st 10:00"
      }
    }
  }
}