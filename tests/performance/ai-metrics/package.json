{
  "name": "ai-metrics-test-suite",
  "version": "1.0.0",
  "description": "Système de métriques pour les temps de réponse IA/OCR sous charge - DocuCortex",
  "main": "ai-metrics-orchestrator.js",
  "scripts": {
    "start": "node ai-metrics-orchestrator.js",
    "test": "node ai-metrics-orchestrator.js --tests all",
    "quick": "node ai-metrics-orchestrator.js --tests ollama,easyocr --parallel",
    "dashboard": "python3 -m http.server 8080",
    "demo": "node demo-ai-metrics.js",
    "install-deps": "npm install && echo 'Dépendances installées'",
    "check-services": "node scripts/check-services.js",
    "generate-report": "node scripts/generate-report.js",
    "setup": "./start-ai-metrics.sh --config"
  },
  "keywords": [
    "ai",
    "metrics",
    "performance",
    "monitoring",
    "ollama",
    "easyocr",
    "docucortex",
    "ged",
    "load-testing",
    "alerting",
    "dashboard",
    "observability"
  ],
  "author": {
    "name": "DocuCortex AI Team",
    "email": "ai-metrics@docucortex.com",
    "url": "https://docucortex.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/docucortex/ai-metrics.git"
  },
  "bugs": {
    "url": "https://github.com/docucortex/ai-metrics/issues"
  },
  "homepage": "https://github.com/docucortex/ai-metrics#readme",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "os": [
    "linux",
    "darwin",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "dependencies": {
    "axios": "^1.6.0",
    "ping": "^0.4.4"
  },
  "devDependencies": {
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "nodemon": "^3.0.0"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "off",
      "prefer-const": "error",
      "no-unused-vars": "warn"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "scripts/**/*.js",
      "shared/**/*.js",
      "!scripts/**/node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "config": {
    "aiMetrics": {
      "version": "1.0.0",
      "buildDate": "2025-11-04",
      "defaultTestConfig": {
        "ollama": {
          "baseUrl": "http://localhost:11434",
          "model": "llama3.2:3b",
          "concurrentUsers": 5,
          "testDuration": 300
        },
        "easyocr": {
          "concurrentUsers": 3,
          "totalDocuments": 50,
          "languages": ["fr", "en", "es"]
        },
        "docucortex": {
          "baseUrl": "http://localhost:3000",
          "concurrentUsers": 8,
          "testDuration": 240
        },
        "ged": {
          "totalDocuments": 100,
          "concurrentUploads": 5,
          "batchSize": 10
        },
        "network": {
          "testDuration": 180,
          "pingCount": 100
        },
        "degradation": {
          "maxUsers": 30,
          "testDuration": 600,
          "enableFallback": true
        }
      },
      "alertThresholds": {
        "responseTime": {
          "critical": 5000,
          "high": 3000,
          "warning": 2000
        },
        "successRate": {
          "critical": 80,
          "high": 85,
          "warning": 90
        },
        "cpuUsage": {
          "critical": 95,
          "high": 85,
          "warning": 75
        }
      }
    }
  },
  "bin": {
    "ai-metrics": "./ai-metrics-orchestrator.js",
    "start-ai-metrics": "./start-ai-metrics.sh"
  },
  "files": [
    "ai-metrics-orchestrator.js",
    "start-ai-metrics.sh",
    "scripts/",
    "shared/",
    "dashboards/",
    "alerts/",
    "configs/",
    "README.md",
    "LICENSE"
  ]
}