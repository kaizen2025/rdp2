{
  "name": "rdp-memory-tests",
  "version": "1.0.0",
  "description": "Système de détection et test des fuites de mémoire pour l'application RDP",
  "main": "runMemoryTests.js",
  "scripts": {
    "test:memory": "node --expose-gc runMemoryTests.js",
    "test:memory:watch": "jest --config jest.config.memory.js --watch",
    "test:memory:verbose": "jest --config jest.config.memory.js --verbose",
    "test:heap": "jest --config jest.config.memory.js nodeElectronHeap.test.js",
    "test:react": "jest --config jest.config.memory.js reactComponentLeaks.test.js",
    "test:websocket": "jest --config jest.config.memory.js websocketLeaks.test.js",
    "test:ged": "jest --config jest.config.memory.js gedMassiveOperations.test.js",
    "test:electron": "jest --config jest.config.memory.js electronWindowCleanup.test.js",
    "test:profiling": "jest --config jest.config.memory.js detailedProfiling.test.js",
    "memory:profile": "node --expose-gc --inspect runMemoryTests.js",
    "memory:analyze": "node --expose-gc -e \"const { HeapAnalyzer } = require('./heapProfiler'); const analyzer = new HeapAnalyzer(); console.log(JSON.stringify(analyzer.generateDetailedReport(), null, 2))\"",
    "memory:report": "node --expose-gc -e \"const MemoryMonitor = require('./memoryMonitor'); const monitor = new MemoryMonitor(); monitor.saveReport('rapport-manuel.json')\"",
    "memory:stress": "node --expose-gc -e \"console.log('Tests de stress mémoire'); process.exit(0)\"",
    "memory:clean": "rm -rf reports/ logs/ snapshots/ && echo 'Dossiers nettoyés'"
  },
  "keywords": [
    "memory-leak-detection",
    "performance-testing",
    "nodejs",
    "electron",
    "react",
    "websocket",
    "ged",
    "memory-profiling",
    "heap-analysis",
    "memory-monitoring"
  ],
  "author": "Équipe RDP",
  "license": "MIT",
  "dependencies": {
    "jest": "^27.5.1",
    "ws": "^8.5.0"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "jest-html-reporters": "^3.0.3",
    "jest-junit": "^13.0.0",
    "performance-memory": "^2.0.0"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testTimeout": 30000,
    "collectCoverage": false,
    "setupFilesAfterEnv": [
      "<rootDir>/setup.js"
    ],
    "reporters": [
      "default",
      [
        "jest-html-reporters",
        {
          "publicPath": "./reports",
          "filename": "memory-tests-report.html",
          "expand": true
        }
      ]
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rdp/performance-tests.git"
  },
  "bugs": {
    "url": "https://github.com/rdp/performance-tests/issues"
  },
  "homepage": "https://github.com/rdp/performance-tests#readme"
}