# Configuration d'environnement pour les tests de performance
# Copiez ce fichier vers .env et ajustez selon votre environnement

# Serveur API
API_BASE_URL=http://localhost:3002
API_PORT=3002
WS_PORT=3003

# Base de données
DB_PATH=../../data/rds_viewer_data.sqlite

# Environnement de test
NODE_ENV=development

# Options de test
VERBOSE=false
GENERATE_REPORTS=true

# Seuils de performance personnalisés (optionnel)
PERF_RESPONSE_TIME_WARNING=500
PERF_RESPONSE_TIME_CRITICAL=1000
PERF_THROUGHPUT_MINIMUM=100
PERF_ERROR_RATE_MAXIMUM=1

# Concurrence de test
PERF_LOW_CONCURRENCY=10
PERF_MEDIUM_CONCURRENCY=50
PERF_HIGH_CONCURRENCY=100

# Durées de test (secondes)
PERF_SHORT_DURATION=30
PERF_MEDIUM_DURATION=300
PERF_LONG_DURATION=600

# Dossier de sortie des rapports
PERF_OUTPUT_DIR=results

# Options avancées
PERF_MEMORY_MONITORING_INTERVAL=5000
PERF_HEAP_ANALYSIS_ENABLED=true
PERF_DETAILED_LOGGING=false