{
  "name": "docucortex-ia-rdp2",
  "version": "3.0.31",
  "description": "DocuCortex IA - Gestionnaire Intelligent de Documents avec Intelligence Artificielle Ollama intégrée",
  "main": "electron/main.js",
  "homepage": "./",
  "author": {
    "name": "DocuCortex Team",
    "email": "contact@docucortex.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kaizen2025/rdp2.git"
  },
  "keywords": [
    "document-management",
    "ai",
    "ollama",
    "ocr",
    "react",
    "electron",
    "nodejs",
    "material-ui",
    "intelligence-artificielle"
  ],
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "server:start": "node server/server.js",
    "server:dev": "nodemon server/server.js",
    "server:test": "node scripts/test-ollama.js",
    "ollama:test": "node scripts/test-ollama.js",
    "ollama:setup": "echo 'Installation des modèles Ollama recommandés...' && ollama pull llama2 && ollama pull mistral && ollama pull llava",
    "electron": "electron .",
    "electron:start": "concurrently \"npm run server:start\" \"npm run start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:dev": "concurrently \"npm run server:dev\" \"npm run start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:prod": "npm run build && electron .",
    "dev": "concurrently \"npm run server:dev\" \"npm run start\"",
    "build:exe": "npm run build && electron-builder --win portable",
    "build:all": "npm run build && electron-builder --win --linux --mac",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux",
    "clean": "rimraf build dist node_modules",
    "reinstall": "npm run clean && npm install",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "postinstall": "electron-builder install-app-deps",
    "setup:ollama": "npm run server:start & sleep 3 && npm run ollama:test",
    "check:ollama": "curl -s http://localhost:5000/api/health | jq '.services.ollama.status'",
    "demo:generate": "curl -X POST http://localhost:5000/api/ollama/generate -H 'Content-Type: application/json' -d '{\"prompt\": \"Crée un résumé de 100 mots sur DocuCortex IA\"}'",
    "demo:analyze": "curl -X POST http://localhost:5000/api/ollama/analyze-document -H 'Content-Type: application/json' -d '{\"text\": \"Rapport de ventes Mars 2024: 150K€ de CA, +20% vs février\", \"type\": \"txt\"}'",
    "test:ocr": "node test-ocr.js"
  },
  "dependencies": {
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.5",
    "@mui/icons-material": "^5.15.15",
    "@mui/material": "^5.15.15",
    "@mui/x-date-pickers": "^6.19.8",
    "axios": "^1.7.2",
    "bcrypt": "^6.0.0",
    "better-sqlite3": "^12.4.1",
    "compromise": "^14.14.4",
    "cors": "^2.8.5",
    "date-fns": "^3.6.0",
    "dotenv": "^16.4.5",
    "electron-is-dev": "2.0.0",
    "electron-log": "^5.2.4",
    "electron-updater": "^6.3.9",
    "express": "^4.21.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.1.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mammoth": "^1.11.0",
    "multer": "^2.0.2",
    "natural": "^8.1.0",
    "node-nlp": "^5.0.0-alpha.5",
    "pdf-parse": "^2.4.5",
    "pizzip": "^3.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.23.1",
    "web-vitals": "^4.0.1",
    "tesseract.js": "^5.1.1",
    "uuid": "^9.0.1",
    "ws": "^8.18.3",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@babel/core": "^7.24.5",
    "@babel/preset-env": "^7.24.5",
    "@babel/preset-react": "^7.24.5",
    "colors": "^1.4.0",
    "concurrently": "^8.2.2",
    "electron": "^31.0.0",
    "electron-builder": "^25.1.8",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.1",
    "jest": "^27.5.1",
    "nodemon": "^3.1.0",
    "react-scripts": "5.0.1",
    "rimraf": "^6.0.1",
    "wait-on": "^7.2.0",
    "serve": "^14.2.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.docucortex.ia.rdp2",
    "productName": "DocuCortex IA - RDP2",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "electron/**/*",
      "server/**/*",
      "src/**/*",
      "scripts/**/*",
      "docs/**/*",
      "data/**/*",
      "package.json",
      "!.env*"
    ],
    "extraResources": [
      {
        "from": "data/",
        "to": "data/"
      }
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "artifactName": "DocuCortex-IA-RDP2-^${version}-^${arch}.^${ext}"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "category": "Office"
    },
    "portable": {
      "artifactName": "DocuCortex-IA-RDP2-^${version}-portable.^${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "server/**/*.{js}",
      "!src/index.js",
      "!src/reportWebVitals.js",
      "!server/server.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "ollama": {
    "host": "http://localhost:11434",
    "recommended_models": [
      "llama2",
      "mistral",
      "llava"
    ],
    "min_ram_gb": 8,
    "recommended_ram_gb": 16
  }
}