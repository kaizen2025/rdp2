{
  "name": "docucortex-ia",
  "version": "3.0.31",
  "description": "DocuCortex IA - Gestionnaire Intelligent avec Intelligence Artificielle",
  "author": {
    "name": "DocuCortex Team",
    "email": "contact@docucortex.com",
    "url": "https://www.docucortex.com"
  },
  "homepage": "https://www.docucortex.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/docucortex/docucortex-ia.git"
  },
  "license": "MIT",
  "main": "main.js",
  "scripts": {
    "start": "react-scripts start",
    "electron": "electron . --no-sandbox",
    "electron-dev": "concurrently \"npm start\" \"wait-on http://3000 && electron . --no-sandbox\"",
    "dev": "npm run electron-dev",
    "dev-alt": "PORT=3003 react-scripts start",
    "build": "react-scripts build",
    "build:analyze": "npm run build && npx serve -s build",
    "test": "react-scripts test",
    "test:coverage": "react-scripts test --coverage --watchAll=false",
    "test:loans": "react-scripts test src/tests/loans.test.js --watchAll=false",
    "test:loans-integration": "react-scripts test src/tests/loans-integration.test.js --watchAll=false",
    "test:loans-performance": "react-scripts test src/tests/loans-performance.test.js --watchAll=false",
    "test:loans-unit": "npm run test:loans -- --verbose",
    "test:loans-all": "react-scripts test src/tests/loans*.test.js --watchAll=false",
    "test:loans-watch": "react-scripts test src/tests/loans*.test.js",
    "test:loans-coverage": "react-scripts test src/tests/loans*.test.js --coverage --watchAll=false",
    "test:loans-ci": "CI=true react-scripts test src/tests/loans*.test.js --coverage --watchAll=false --verbose",
    "eject": "react-scripts eject",
    "lint": "eslint src/**/*.{js,jsx}",
    "lint:fix": "eslint src/**/*.{js,jsx} --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,css,md}\"",
    "clean": "rimraf build node_modules/.cache",
    "reset": "npm run clean && rm -rf node_modules package-lock.json && npm install",
    "server:start": "node server/server.js",
    "start:auto": "node scripts/start-react.js",
    "test:app": "concurrently \"npm run server:start\" \"npm run start:auto\" --names \"SERVER,REACT\" --prefix-colors \"cyan,magenta\"",
    "test:app:simple": "concurrently \"npm run server:start\" \"npm run start:auto\"",
    "check-ports": "node -e \"const {findAllPorts} = require('./backend/utils/portUtils'); findAllPorts().then(console.log).catch(console.error);\"",
    "generate-icons": "node generate-icons.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "build:win": "npm run build && electron-builder --win",
    "build:linux": "npm run build && electron-builder --linux",
    "build:mac": "npm run build && electron-builder --mac",
    "build:all": "npm run build && electron-builder -mwl",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.4",
    "@mui/material": "^7.3.4",
    "axios": "^1.6.1",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.3.1",
    "electron": "^28.2.0",
    "express": "^4.18.2",
    "express-fileupload": "^1.4.3",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "file-type": "^18.7.0",
    "framer-motion": "^10.16.4",
    "fs-extra": "^11.1.1",
    "helmet": "^6.0.1",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "mime-types": "^2.1.35",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3",
    "react-hot-toast": "^2.4.1",
    "react-loading-skeleton": "^3.3.1",
    "react-router-dom": "^6.20.1",
    "react-scripts": "5.0.1",
    "react-window": "^1.8.8",
    "react-virtualized-auto-sizer": "^1.0.20",
    "recharts": "^2.8.0",
    "uuid": "^9.0.1",
    "web-vitals": "^5.1.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-object-rest-spread": "^7.20.7",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-react": "^7.22.0",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.1",
    "babel-jest": "^29.7.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "date-fns": "^2.30.0",
    "electron-builder": "^24.9.1",
    "enzyme-to-json": "^3.6.2",
    "eslint": "^8.54.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.5.1",
    "jest-environment-jsdom": "^29.7.0",
    "jest-junit": "^16.0.0",
    "png2icons": "^2.0.1",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "serve": "^14.2.1",
    "sharp": "^0.33.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "wait-on": "^7.2.0",
    "webpack-bundle-analyzer": "^4.10.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/index.js",
      "!src/reportWebVitals.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "proxy": "http://localhost:5000",
  "build": {
    "appId": "com.docucortex.ia",
    "productName": "DocuCortex IA",
    "copyright": "Copyright Â© 2025 DocuCortex Team",
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "main.js",
      "server.js",
      "backend/**/*",
      "node_modules/**/*",
      "package.json",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "extraResources": [
      {
        "from": "data",
        "to": "data",
        "filter": ["**/*"]
      },
      {
        "from": "config",
        "to": "config",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icons/icon.ico",
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
      "publisherName": "DocuCortex Team",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "installerIcon": "build/icons/icon.ico",
      "uninstallerIcon": "build/icons/icon.ico",
      "installerHeaderIcon": "build/icons/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "DocuCortex IA",
      "deleteAppDataOnUninstall": false,
      "runAfterFinish": true,
      "menuCategory": "DocuCortex",
      "include": "build/installer.nsh",
      "language": "1036"
    },
    "portable": {
      "artifactName": "${productName}-${version}-Portable.${ext}"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm",
        "snap"
      ],
      "icon": "build/icons",
      "category": "Office",
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "description": "DocuCortex IA - Gestionnaire Intelligent de Documents avec Intelligence Artificielle",
      "synopsis": "Gestionnaire intelligent de documents",
      "vendor": "DocuCortex Team",
      "maintainer": "contact@docucortex.com",
      "desktop": {
        "Name": "DocuCortex IA",
        "Type": "Application",
        "GenericName": "Document Manager",
        "Comment": "Gestionnaire Intelligent de Documents",
        "Categories": "Office;DocumentManagement;",
        "Keywords": "document;manager;ai;intelligence;artificial;",
        "StartupNotify": "true",
        "Terminal": "false"
      }
    },
    "deb": {
      "depends": [
        "gconf2",
        "gconf-service",
        "libnotify4",
        "libappindicator1",
        "libxtst6",
        "libnss3"
      ],
      "priority": "optional",
      "afterInstall": "build/scripts/after-install.sh",
      "afterRemove": "build/scripts/after-remove.sh"
    },
    "rpm": {
      "depends": [
        "libXScrnSaver"
      ],
      "afterInstall": "build/scripts/after-install.sh",
      "afterRemove": "build/scripts/after-remove.sh"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icons/icon.icns",
      "category": "public.app-category.business",
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
      "darkModeSupport": true,
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "background": "build/icons/dmg-background.png",
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "publish": [
      {
        "provider": "github",
        "owner": "docucortex",
        "repo": "docucortex-ia",
        "releaseType": "release"
      }
    ],
    "compression": "normal",
    "asar": true,
    "asarUnpack": [
      "**/node_modules/sharp/**/*",
      "**/data/**/*"
    ],
    "npmRebuild": true,
    "nodeGypRebuild": false
  }
}
